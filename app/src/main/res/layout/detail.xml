<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivFotoProdukDetail"
                android:layout_width="match_parent"
                android:layout_height="392dp"
                android:scaleType="centerCrop"
                android:src="@drawable/foto_produk_detail"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvNamaProdukDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Lampu belajar"
                    android:textColor="#3E3E3E"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:layout_marginEnd="35dp"/>

                <TextView
                    android:id="@+id/tvHargaJualDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Rp 120.000"
                    android:textColor="#0E0E0E"
                    android:textSize="18sp"
                    android:textAlignment="textEnd"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_location_detail"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/tvKotaProdukDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Kota Malang"
                    android:textColor="#A6A1A1"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:layout_marginEnd="35dp"/>

                <TextView
                    android:id="@+id/tvHargaBeliDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Rp 270.000"
                    android:textColor="#A6A1A1"
                    android:textSize="18sp"
                    android:textStyle=""
                    android:textAlignment="textEnd"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Stok"
                android:fontFamily="@font/poppins_regular"
                android:textSize="13sp"
                android:textColor="#A6A1A1"
                android:textAlignment="textEnd"
                android:layout_marginHorizontal="20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="2"
                android:fontFamily="@font/poppins_regular"
                android:textSize="18sp"
                android:textColor="#4E942D"
                android:textAlignment="textEnd"
                android:layout_marginHorizontal="20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Deskripsi Produk"
                android:fontFamily="@font/poppins_regular"
                android:textSize="13sp"
                android:textColor="#A6A1A1"
                android:textAlignment="textStart"
                android:layout_marginHorizontal="20dp"/>

            <TextView
                android:id="@+id/tvDeskripsiDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Isi dalam box : \n- 1 unit lampu belajar aoki \n- 1 pc Kabel USB \nNOTE: \n-Mohon cas ulang (3 jam) sebelum pemakaian pertama kali.\n-Mohon segera dicas saat lampu mulai redup,Apabila tidak dilakukan pengecasan maka akan mempengaruhi masa pakai batrai."
                android:fontFamily="@font/poppins_regular"
                android:textSize="15sp"
                android:maxLines="3"
                android:textColor="#0E0E0E"
                android:textAlignment="textStart"
                android:layout_marginHorizontal="20dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnReadMore"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/read_more_bg"
                android:text="Baca Selengkapnya"
                android:fontFamily="@font/poppins_regular"
                android:textSize="13sp"
                android:textColor="#3C8918"
                android:layout_marginHorizontal="118dp"
                android:layout_marginTop="8dp"
                android:textAllCaps="false"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="horizontal"
                android:layout_marginHorizontal="20dp"
                android:gravity="center"
                android:layout_marginBottom="59dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/ivProfilPenjual"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:shapeAppearanceOverlay="@style/profilePictureBg"
                    android:src="@drawable/foto_profil"
                    android:layout_marginEnd="16dp"/>

                <TextView
                    android:id="@+id/tvNamaPenjual"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Michael J"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="18sp"
                    android:textColor="@color/black"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>